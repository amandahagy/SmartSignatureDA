@model SmartSignature.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User data</title>
</head>
<body>
    <h1>User data</h1>
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <label>Password:</label>
                <div class="col-md-10">
                    <span>@Model.Password</span>
                </div>
            </div>
            <div class="form-group">
                <label>Name</label>
                <div class="col-md-10">
                    <span>@Model.Name</span>
                </div>
            </div>
            <div class="form-group">
                <label>RG</label>
                <div class="col-md-10">
                    <span>@Model.Rg</span>
                </div>
            </div>
            <div class="form-group">
                <label>CPF</label>
                <div class="col-md-10">
                    <span>@Model.Cpf</span>
                </div>
            </div>
            <hr />
        </div>
    <div>
        <a asp-controller="User" asp-action="Index">Page Back</a>
    </div>
</body>
</html>